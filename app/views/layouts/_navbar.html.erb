<div data-controller="book-search" class="grid w-full space-y-6 border-b-[#f7f4f2] border-b-1 py-6 lg:px-12 mb-12">
  <div class="navbar">
    <div class="navbar-start">
      <label for="my-drawer" class="drawer-button cursor-pointer lg:hidden">
        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
        </svg>
      </label>

      <%= form_with url: books_path, method: :get, local: true, class: "grid space-y-4 hidden lg:flex " do |f| %>
        <label class="input bg-[#F4F7FF] border-[#CBD5E0] border-2 hidden lg:flex items-center w-96 h-14">
          <%= f.text_field :query, value: params[:query], placeholder: "Search books...", class: "grow py-6 w-full text-lg pl-2" %>
          <div>
            <div class="flex items-center justify-center">
              <%= button_tag type: 'submit', class: "btn btn-search bg-blue-500 rounded-lg flex items-center gap-2" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-search" viewBox="0 0 16 16">
                  <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                </svg>
              <% end %>

            </div>
          </div>
        </label>
      <% end %>

    </div>

    <div class="navbar-center">
      <img alt="rubynor logo" src="<%= asset_path('Rubynor_logo_forenklet.png') %>" width="150" class="lg:hidden" />
    </div>

    <div class="navbar-end">
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button">
          <div class="flex gap-4">
            <div class="avatar avatar-placeholder">
              <div class="bg-neutral text-neutral-content w-12 rounded-full">
                <span class="text-md"><%= current_user.first_name[0] %><%= current_user.last_name[0] %></span>
              </div>
            </div>
            <div class="lg:grid hidden">
              <p class="font-semibold"><%= current_user.first_name %> <%= current_user.last_name %></p>
              <p class="small"><%= current_user.email %></p>
            </div>
            <div class="lg:block hidden m-auto">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708"/>
              </svg>
            </div>
          </div>
        </div>
        <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-1 w-52 p-2 shadow-sm">
          <li>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-error" %>
          </li>
        </ul>
      </div>
    </div>

  </div>
  <div class="lg:hidden flex items-center gap-6">
      <%= form_with url: books_path, method: :get, local: true, class: "grid space-y-4 flex" do |f| %>
        <label class="input">
          <svg class="opacity-50" width="24" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <g stroke-linejoin="round" stroke-linecap="round" stroke-width="2.5" fill="none" stroke="currentColor">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.3-4.3"></path>
            </g>
          </svg>
          <%= f.text_field :query, value: params[:query], placeholder: "Search books...", class: "grow" %>
        </label>
      <% end %>


    <div class="ml-auto md:w-56">
      <%= render "select_sort" %>
    </div>
  </div>
</div>