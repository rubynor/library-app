<div data-controller="book-search" class="grid w-full space-y-6 pb-3 pt-6 lg:px-4\3">
  <div class="navbar">
    <div class="navbar-start">
      <%= link_to root_path do %>
        <img class="h-12 md:h-14 group-hover:h-full transition-all duration-300" alt="rubynor logo hvite forenklet" src="<%= asset_path('Rubynor_logo_200x200.png') %>" />
      <% end %>
    </div>

    <div class="navbar-end">
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button">
          <div class="flex gap-4">
            <div class="avatar avatar-placeholder">
              <div class="bg-neutral text-neutral-content w-12 rounded-full">
                <span class="text-md"><%= current_user.first_name[0] %><%= current_user.last_name[0] %></span>
              </div>
            </div>
            <div class="lg:grid hidden">
              <p class="font-semibold text-lg"><%= current_user.first_name %> <%= current_user.last_name %></p>
              <p class="text-gray-500 text-sm"><%= current_user.email %></p>
            </div>
            <div class="lg:block hidden m-auto">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chevron-down" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708"/>
              </svg>
            </div>
          </div>
        </div>
        <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-1 w-52 p-2 shadow-sm">
          <li>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-error" %>
          </li>
        </ul>
      </div>
    </div>

  </div>
</div>