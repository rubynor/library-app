<div class="bg-gray-50 h-screen w-screen flex items-center justify-center">
  <div class="bg-white p-8 py-12 rounded-3xl text-gray-200 w-[30rem]">
    <div class="text-center mb-12 space-y-3">
      <h2 class="text-gray-700 text-3xl font-extrabold">Sign Up</h2>
      <p class="text-gray-200">Create your account to get started!</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="space-y-6">
        <div class="field input w-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
          </svg>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "grow w-full", placeholder: "Your Email" %>
        </div>

        <div class="field input w-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
          </svg>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: "grow w-full", placeholder: "First Name"  %>
        </div>

        <div class="field input w-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
          </svg>
          <%= f.text_field :last_name, autocomplete: "last name", class: "grow w-full", placeholder: "Last Name" %>
        </div>


        <div class="field input w-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2M5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1"/>
          </svg>
          <%= f.password_field :password, autocomplete: "new-password", class: "grow w-full", placeholder: "Password" %>
        </div>

        <div class="field input w-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2M5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1"/>
          </svg>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "grow w-full", placeholder: "Confirm Password" %>
        </div>

        <div class="w-full actions text-center space-y-5">
          <%= f.submit "Sign up", class: "btn w-full bg-blue-500 text-white rounded-xl" %>
          <p class="text-gray-200">
            Already have an account? <%= link_to "Log in", new_user_session_path, class: "text-blue-500 font-bold" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
