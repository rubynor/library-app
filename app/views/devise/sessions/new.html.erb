<div class="bg-[#F2F4F7] h-screen w-screen flex items-center justify-center">

  <div class="bg-white p-8 py-12 rounded-3xl text-[#757575] w-[30rem]">
    <div class="text-center mb-12 space-y-3">
      <h2 class="text-[#212121] text-3xl font-extrabold">Sign In</h2>
      <p class="text-[#757575]">Welcome back, you’ve been missed!</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-6">
        <div class="field input w-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
            <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"/>
          </svg>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "grow w-full", placeholder: "Your Email" %>
        </div>

        <div class="field input w-full">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2M5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1"/>
          </svg>

          <%= f.password_field :password, autocomplete: "current-password", class: "grow w-full", placeholder: "Password" %>
        </div>


        <div class="flex">
          <% if devise_mapping.rememberable? %>
            <div class="field w-1/2 text-left space-x-2">
              <%= f.check_box :remember_me, class: "checkbox checkbox-sm" %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="w-1/2 text-right text-[#111F4D]">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            <% end %>

          </div>

        </div>


        <div class="w-full actions text-center space-y-5">
          <%= f.submit "Log in", class: "btn w-full bg-[#111F4D] text-white rounded-xl" %>
          <p class="text-[#757575]">
            Don’t have an account yet? <%= link_to "Sign up", new_user_registration_path, class: "text-[#111F4D] font-bold" %>
          </p>
        </div>

      </div>
    <% end %>

  </div>
</div>

